{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "supertest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmit": true
  },
  "include": ["src/**/*", "__tests__/**/*", "**/*.test.ts", "**/*.spec.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
